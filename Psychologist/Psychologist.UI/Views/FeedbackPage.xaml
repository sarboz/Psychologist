<?xml version="1.0" encoding="utf-8"?>

<abstractions:BaseContentPage x:TypeArguments="viewModels:FeedbackViewModel" xmlns="http://xamarin.com/schemas/2014/forms"
                              xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
                              xmlns:resources="clr-namespace:Paradigm.UI.Resources;assembly=Psychologist.UI"
                              xmlns:abstractions="clr-namespace:Psychologist.UI.Abstractions;assembly=Psychologist.UI"
                              xmlns:viewModels="clr-namespace:Psychologist.Core.ViewModels;assembly=Psychologist.Core"
                              Title="Обратная связь"
                              x:Class="Psychologist.UI.Views.FeedbackPage">
    <abstractions:BaseContentPage.IconImageSource>
        <FontImageSource FontFamily="{StaticResource MaterialFontFamily}"
                         Glyph="{x:Static resources:MaterialIcons.MessageText}"
                         Color="Chartreuse" />
    </abstractions:BaseContentPage.IconImageSource>
    <abstractions:BaseContentPage.Content>
        <Grid RowDefinitions="auto,auto,*,auto">
           <Entry  x:Name="NameEntry" Placeholder="имя"  Margin="20" />
           <Entry  x:Name="CityEntry" Placeholder="город"  Margin="20" Grid.Row="1"/>
           <Editor  x:Name="Entry" Placeholder="напишите свой вопрос"  Margin="20" Grid.Row="2"/>
           <Button Grid.Row="3" BackgroundColor="{StaticResource ColorPrimary}" Text="Отправить автору" Clicked="SendViaSMS"/>
        </Grid>
    </abstractions:BaseContentPage.Content>
</abstractions:BaseContentPage>