<?xml version="1.0" encoding="utf-8"?>

<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:resources="clr-namespace:Paradigm.UI.Resources;assembly=Psychologist.UI"
             Title="Поддержка"
             x:Class="Psychologist.UI.Views.AboutPage">
    <ContentPage.IconImageSource>
        <FontImageSource FontFamily="{StaticResource MaterialFontFamily}"
                         Glyph="{x:Static resources:MaterialIcons.InformationOutline}"
                         Color="Chartreuse" />
    </ContentPage.IconImageSource>
    <ContentPage.Content>
        <ScrollView Orientation="Vertical">
            <Grid RowDefinitions="auto,auto">
                <StackLayout Padding="20">
                    <Image Margin="0,10,0,0" Source="oon_icon.png" WidthRequest="200" HeightRequest="400"
                           HorizontalOptions="Center" />
                    <Label FontSize="16" HorizontalTextAlignment="Center">
                        <Label.FormattedText>
                            <FormattedString>
                                <Span Text=" Данное мобильное приложение разработано по инициативе &#x0a;" />
                                <Span FontAttributes="Bold" Text=" ПРООН «InnoResponse Challenge Round 4», &#x0a;"></Span>
                                <Span Text="в рамках проекта 'Содействие гражданскому сообществу в устранении последствий COVID-19'."></Span>
                            </FormattedString>
                        </Label.FormattedText>
                    </Label>
                    <Label FontSize="16" HorizontalTextAlignment="Center" Margin="0,10,0,0" Text=" Мнения, и другие материалы приведенные в мобильном приложении принадлежат автору и не всегда отражают мнение и взгляды ПРООН."></Label>
                </StackLayout>
            </Grid>
        </ScrollView>
    </ContentPage.Content>
</ContentPage>